#!/usr/bin/env node
process.env.NODE_ENV = 'test';

const logger = console;

const AWS = require('../src/utils/aws');


const aSecond = (t = 1000) => new Promise((r) => setTimeout(r, t));

const waitFor = async (fn) => {
    let expiresAt = Date.now() + (1000 * 60);

    let ready;

    while(!ready) {
        if(Date.now() >= expiresAt) {
            throw new Error("Timeout exceeded");
        }

        try {
            await fn();
            ready = true;
        } catch(e) {
            logger.error(e);
            await aSecond();
        }
    }
};

const waitForS3 = () => {
    const s3 = new AWS.S3();

    return waitFor(async () => {
        logger.info("Attempting to connect to s3");
        await s3.listBuckets().promise();
    });
};

const wait = async () => {
    const promises = [
        waitForS3(),
    ];

    await new Promise((res, rej) => {
        setTimeout(() => rej("Timeout"), 1000 * 60);

        Promise.all(promises)
            .then(res)
            .catch(rej)
        ;
    });
};

const main = async () => {
  try {
      logger.info("Waiting for localstack at", AWS.config.endpoint);
      await wait();
      logger.info("Ready");
  } catch(e) {
      logger.error(e);
      process.exit(1);
  }
};

main();
